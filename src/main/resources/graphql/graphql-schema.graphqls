scalar Date

# クエリ定義
type Query {
    fetchEmployeeById(employeeId: ID): EmployeeResponse
    fetchEmployeeAll: [EmployeeResponse]
}
type Mutation {
    createEmployee(input: EmployeeRequest!): EmployeeResponse!
    updateEmployee(employeeId: ID!, input: EmployeeRequest!): EmployeeResponse!
}

# タイプ定義
type EmployeeResponse {
    employeeId: ID!
    employeeName: String!
    department: Department
    gender: String!
    personal: Personal
    historyList: [History]
}

input EmployeeRequest {
    employeeId: String!
    departmentId: Int!
    employeeName: String!
    gender: String!
    birthday: Date!
    telephoneNumber: String!
    mailAddress: String!
    historyList: [HistoryInput]!
}

input HistoryInput {
    startDate: Date!
    employeeId: String!
    departmentId: Int!
    content: String
}

type Department {
    departmentId: ID!
    departmentName: String!
}

type Personal {
    employeeId: ID!
    birthday: Date!
    telephoneNumber: String!
    mailAddress: String!
}

type History {
    startDate: Date!
    employeeId: String!
    departmentId: Int!
    content: String
}
